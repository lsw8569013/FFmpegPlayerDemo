<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.handsome.ndkffmpeg.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="video2YUV"
            android:text="视频转YUV" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="video2RGB"
            android:text="视频原生播放" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="sound2PCM"
            android:text="音频转PCM" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="soundPlay"
            android:text="音频原生播放" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="videoAndSoundPlay"
            android:text="音视频播放" />
    </LinearLayout>

    <com.handsome.ndkffmpeg.VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
